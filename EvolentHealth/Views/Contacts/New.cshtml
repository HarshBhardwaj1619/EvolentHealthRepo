@model EvolentHealth.ViewModels.RandomContactsViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save","Contacts"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Contact.FirstName)
        @Html.TextBoxFor(m => m.Contact.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.LastName)
        @Html.TextBoxFor(m => m.Contact.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.Email)
        @Html.TextBoxFor(m => m.Contact.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.PhoneNumber)
        @Html.TextBoxFor(m => m.Contact.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.Status)
        @Html.TextBoxFor(m => m.Contact.Status, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Contact.Id)
    <button type="submit" class="btn btn-primary" >Save</button>
}

